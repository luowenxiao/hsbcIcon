            </table>
        </div>
        
        
        <div class="controls">
            <button id="selectAllBtn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                </svg>
                选中全部
            </button>
            <button id="copyBtn">复制</button>
        </div>
        
        
    </div>

    <script>
        // 获取DOM元素
        const demoText = document.getElementById('demoText');
        const selectionInfo = document.getElementById('selectionInfo');
        const selectAllBtn = document.getElementById('selectAllBtn');
        const copyBtn = document.getElementById('copyBtn');
        
        // 更新选中信息显示
        function updateSelectionInfo(text) {
            if (text && text.trim().length > 0) {
                selectionInfo.innerHTML = `<span class="highlight">${text}</span>`;
            } else {
                selectionInfo.textContent = '等待选中文字...';
            }
        }
        
        // 选中指定元素内的文本
        function selectElementText(element) {
            const range = document.createRange();
            range.selectNodeContents(element);
            const selection = window.getSelection();
            selection.removeAllRanges();
            selection.addRange(range);
            copyRichText()
            // 显示选中信息
            updateSelectionInfo(selection.toString());
        }
        
        // 事件监听
        selectAllBtn.addEventListener('click', function() {
            selectElementText(demoText);
        });
        copyBtn.addEventListener('click', function() {
            copyRichText();
        });

        // 复制选中文本到剪贴板
        function copySelectedText() {
            const selection = window.getSelection();
            const selectedText = selection.toString();
            
            if (selectedText.length > 0) {
                navigator.clipboard.writeText(selectedText)
                    .then(() => {
                        alert('已成功复制选中内容到剪贴板!');
                    })
                    .catch(err => {
                        // 降级方案
                        const textArea = document.createElement('textarea');
                        textArea.value = selectedText;
                        document.body.appendChild(textArea);
                        textArea.select();
                        document.execCommand('copy');
                        document.body.removeChild(textArea);
                        alert('已成功复制选中内容到剪贴板!');
                    });
            } else {
                alert('请先选择一些文字!', true);
            }
        }

        function copyRichText() {
            const selection = window.getSelection();
            
            if (selection.toString().trim().length === 0) {
                showNotification('请先选择一些文本!', true);
                return;
            }
            
            // 方法1: 使用现代Clipboard API写入HTML
            if (navigator.clipboard && navigator.clipboard.write) {
                // 获取选中的HTML内容
                const selectedHTML = getSelectedHTML();
                
                // 创建包含HTML和纯文本的ClipboardItem
                const htmlBlob = new Blob([selectedHTML], { type: 'text/html' });
                const textBlob = new Blob([selection.toString()], { type: 'text/plain' });
                
                const clipboardItem = new ClipboardItem({
                    'text/html': htmlBlob,
                    'text/plain': textBlob
                });
                
                navigator.clipboard.write([clipboardItem])
                    .then(() => {
                        alert('富文本已复制到剪贴板!');
                    })
                    .catch(err => {
                        console.error('Clipboard API failed, trying fallback', err);
                        // 如果现代API失败，尝试传统方法
                    });
            } else {
                // 如果现代API失败，尝试传统方法
            }
        }

        function getSelectedHTML() {
            const selection = window.getSelection();
            if (selection.rangeCount === 0) return '';
            
            const range = selection.getRangeAt(0);
            const container = document.createElement('div');
            container.appendChild(range.cloneContents());
            
            return container.innerHTML;
        }
        
    </script>
</body>
</html>
